    <% @cityfind.users.each do |user| %>
      <% user.gossips.each do |gossip| %>
        <div class="card m-4 col-sm-12 col-md-4 col-lg-3 text-center">
          <div class="card-body">
            <h5 class="card-title">
              Auteur: <%= user[:first_name] %>
              <p class="card-text">
              Potin: <%= gossip.title %><br/>
              <%= link_to "Lien vers le potin", gossip_path(gossip.id), :class => "btn btn-secondary"%>  </a>
            </h5>
          </div>
        </div>
    <%end%>
    <%end%>
  </div>

</body>
</html>