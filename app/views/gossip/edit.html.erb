<html>
<head>
  <title>The Gossip Project</title>
</head>
<body>
<%= form_for @gossip do |f| %>
  <div class="form-group">
    <label>Titre du potin</label>
    <%= f.text_field :title, class: 'form control' %>
  </div>
  <div class="form-group">
    <label>Contenu du potin</label>
    <%= f.text_field :content, class: 'form control' %>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-success">Modifier le potin</button>
<% end %>
</body>
</html>