<html>
<head>
  <title>The user Project</title>
</head>
<body>
<%= form_tag url_for(action: 'create'), method: "post" do %>

  <%= label_tag 'First name' %>
  <%= text_field_tag 'first_name', @user.first_name %>
  <br /> <br />

  <%= label_tag 'Last name' %>
  <%= text_area_tag 'last_name', @user.last_name %>
  <br /> <br />

  <%= label_tag 'Description' %>
  <%= text_area_tag 'description', @user.description %>
  <br /> <br />

  <%= label_tag 'Email' %>
  <%= text_area_tag 'email', @user.email %>
  <br /> <br />

  <%= label_tag 'Age' %>
  <%= text_area_tag 'age', @user.age %>
  <br /> <br />

  <%= label_tag 'City' %>
  <%= text_area_tag 'city', @user.city %>
  <br /> <br />

  <%= label_tag 'Password' %>
  <%= text_area_tag 'password', @user.password %>
  <br /> <br />

  <%= label_tag 'Password Confirm' %>
  <%= text_area_tag 'password_confirmation', @user.password_confirmation %>
  <br /> <br />
  <%= submit_tag "Create user" %>

<% end %>
</body>
</html>